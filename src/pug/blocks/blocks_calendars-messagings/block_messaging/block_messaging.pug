mixin block_messaging(img, name, question, answer)

   .block_messaging
       .user_img
           img(src=require("./images/"+img))
       .header_messaging
           p=name

       .content_messaging
           form
               .content_icons
                   button(class='messaging-btn')
                       i(class="icon-message")
                   button(class='messaging-btn')
                       i(class="fa fa-camera" aria-hidden="true")
               .content_chatting
                   .question
                       p=question
                   .answer
                       textarea=answer
                   button="REPLY"