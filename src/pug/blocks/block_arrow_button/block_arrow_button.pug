mixin block_arrow_button(status, side, color)
    .block_arrow_button
        case status
            when "passive"
                case side
                    when "right"
                        button(class="button_" + side + "_passive")

                    default
                        button(class="button_" + "left" + "_passive")

            default
                case color
                    when "orange"
                        case side
                            when "right"
                                button(class="button_" + side + "_orange")

                            default
                                button(class="button_" + "left" + "_orange")

                    default
                        case side
                            when "right"
                                button(class="button_" + side + "_default")

                            default
                                button(class="button_" + "left" + "_default")

